@model AgriTech.Models.Adubo

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>@ViewData["Title"]</h1>

<h4>Adubo</h4>
<hr />
<div class="row">
    <div class="col-md-6 mx-auto">
        <form asp-action="Create" class="form-inline">
            <div class="form-group d-flex justify-content-between">
                <div class="col-md-5">
                    <label asp-for="Tipo" class="control-label"></label>
                    <input asp-for="Tipo" class="form-control" />
                </div>
                <div class="col-md-5">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DescricaoMontagem" class="control-label">Como montar</label>
                <textarea asp-for="DescricaoMontagem" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Observacao" class="control-label">Observação</label>
                <textarea asp-for="Observacao" class="form-control"></textarea>
            </div>

            <hr style="opacity: 0" />

            <div class="form-group d-flex justify-content-end">
                <div class="btn-group">
                    <input type="submit" value="Cadastrar" class="btn btn-success rounded" style="margin-right: 10px;" />
                    <a asp-action="Index" class="btn btn-danger rounded">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>
