@model AgriTech.Models.Adubo

@{
    ViewData["Title"] = "Excluir";
}

<h1>@ViewData["Title"]</h1>

<h4>Adubo</h4>
<p>Você tem certeza que deseja excluir?</p>
<hr />

<div class="w-75 mx-auto">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(mode => Model.Tipo)
        </dt>
        <dd>
            @Html.DisplayFor(mode => Model.Tipo)
        </dd>
        <dt>
            @Html.DisplayNameFor(mode => Model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(mode => Model.Nome)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index">Cancelar</a>
    </form>
</div>