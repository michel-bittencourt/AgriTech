@model AgriTech.Models.Adubo

@{
    ViewData["Title"] = "Detalhes";
}

<h1>@ViewData["Title"]</h1>

<div class="d-flex justify-content-between">
    <h4>@Model.Nome</h4>
    <div class="form-group">
        <div class="btn-group">
            <a asp-action="Index" class="btn btn-danger rounded">Voltar</a>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12 mx-auto">
        <div class="form-group d-flex justify-content-between">
            <div class="col-md-3">
                <label class="control-label">Tipo</label>
                <input asp-for="Tipo" class="form-control border-1" readonly />
            </div>
            <div class="col-md-2">
                <label class="control-label">Nome</label>
                <input asp-for="Nome" class="form-control border-1" readonly />
            </div>
            <div class="col-md-3">
                <label class="control-label">Ingredientes</label>
                <input asp-for="Ingredientes" class="form-control border-1" readonly />
            </div>
            <div class="col-md-3">
                <label class="control-label">Estacao Para Colher</label>
                <input asp-for="DescricaoMontagem" class="form-control border-1" readonly />
            </div>
        </div>

        <div class="form-group d-flex justify-content-between mt-3">
            <div class="col-md-2">
                <label class="control-label">Compri. para Plantio</label>
                <input asp-for="DescricaoUso" class="form-control border-1" readonly />
            </div>
            <div class="col-md-2">
                <label class="control-label">Larg. para Plantio</label>
                <textarea asp-for="Observacao" class="form-control border-1" readonly></textarea>
            </div>
        </div>

        <hr style="opacity: 0" />
    </div>
</div>