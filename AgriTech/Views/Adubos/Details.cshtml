@model AgriTech.Models.Adubo

@{
    ViewData["Title"] = "Detalhes";
}

<h1>@ViewData["Title"]</h1>

<div class="d-flex justify-content-between">
    <h4>@Model.Tipo</h4>
    <div class="form-group">
        <div class="btn-group">
            <a asp-action="#" class="btn btn-warning rounded">Alterar</a>
            <p style="opacity: 0">---</p>
            <a asp-action="Index" class="btn btn-danger rounded">Voltar</a>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="form-group d-flex justify-content-between">
            <div class="col-md-5">
                <label class="control-label">Tipo</label>
                <input asp-for="Tipo" class="form-control border-1" readonly />
            </div>
            <div class="col-md-5">
                <label class="control-label">Nome</label>
                <input asp-for="Nome" class="form-control border-1" readonly />
            </div>
        </div>

        <div class="form-group mt-3">
            <label class="control-label">Ingredientes</label>
            <textarea asp-for="Ingredientes" class="form-control border-1" readonly></textarea>
        </div>
        <div class="form-group mt-3">
            <label class="control-label">Montagem</label>
            <textarea asp-for="DescricaoMontagem" class="form-control border-1" readonly></textarea>
        </div>
        <div class="form-group mt-3">
            <label class="control-label">Uso</label>
            <textarea asp-for="DescricaoUso" class="form-control border-1" readonly></textarea>
        </div>
        <div class="form-group mt-3">
            <label class="control-label">Observação</label>
            <textarea asp-for="Observacao" class="form-control border-1" readonly></textarea>
        </div>

        <hr style="opacity: 0" />
    </div>
</div>