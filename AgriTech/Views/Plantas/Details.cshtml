@model AgriTech.Models.Planta

@{
    ViewData["Title"] = "Detalhes";
}

<h1>@ViewData["Title"]</h1>

<div class="d-flex justify-content-between">
    <h4>@Model.NomePopular</h4>
    <div class="form-group">
        <div class="btn-group">
            <a asp-action="#" class="btn btn-warning rounded">Alterar</a>
            <p style="opacity: 0">---</p>
            <a asp-action="Index" class="btn btn-danger rounded">Voltar</a>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12 mx-auto">
        <div class="form-group d-flex justify-content-between">
            <div class="col-md-3">
                <label class="control-label">Nome Científico</label>
                <input asp-for="NomeCientifico" class="form-control border-1" readonly />
            </div>
            <div class="col-md-2">
                <label class="control-label">Nome Popular</label>
                <input asp-for="NomePopular" class="form-control border-1" readonly />
            </div>
            <div class="col-md-3">
                <label class="control-label">Estacao Para Plantar</label>
                <input asp-for="EstacaoParaPlantar" class="form-control border-1" readonly />
            </div>
            <div class="col-md-3">
                <label class="control-label">Estacao Para Colher</label>
                <input asp-for="EstacaoParaColher" class="form-control border-1" readonly />
            </div>
        </div>

        <div class="form-group d-flex justify-content-between mt-3">
            <div class="col-md-2">
                <label class="control-label">Compri. para Plantio</label>
                <input asp-for="ComprimentoPlantio" class="form-control border-1" readonly />
            </div>
            <div class="col-md-2">
                <label class="control-label">Larg. para Plantio</label>
                <input asp-for="LarguraPlantio" class="form-control border-1" readonly />
            </div>
            <div class="col-md-2">
                <label class="control-label">Profun. para Plantio</label>
                <input asp-for="ProfundidadePlantio" class="form-control border-1" readonly />
            </div>
            <div class="col-md-2">
                <label class="control-label">Ph do Solo</label>
                <input asp-for="PhSolo" class="form-control border-1" readonly />
            </div>
        </div>
        <div class="form-group d-flex justify-content-between mt-3">
            <div class="col-md-2">
                <label class="control-label">Umidade do Solo</label>
                <input asp-for="UmidadeSolo" class="form-control border-1" readonly />
            </div>
            <div class="col-md-3">
                <label class="control-label">Tempo para Germinação</label>
                <input asp-for="DiasGerminacao" class="form-control border-1" readonly />
            </div>
            <div class="col-md-3">
                <label class="control-label">Tempo para Colheita</label>
                <input asp-for="DiasColheita" class="form-control border-1" readonly />
            </div>
            <div class="col-md-3">
                <label class="control-label">Tempo para Secagem</label>
                <input asp-for="TempoSecagem" class="form-control border-1" readonly />
            </div>
        </div>
        <div class="form-group mt-3">
            <label class="control-label">Como Regar</label>
            <textarea asp-for="ComoRegar" class="form-control border-1" readonly></textarea>
        </div>
        <div class="form-group mt-3">
            <label class="control-label">Como Germinar</label>
            <textarea asp-for="ComoGerminar" class="form-control border-1" readonly></textarea>
        </div>
        <div class="form-group mt-3">
            <label class="control-label">Como Colher</label>
            <textarea asp-for="ComoColher" class="form-control border-1" readonly></textarea>
        </div>
        <div class="form-group mt-3">
            <label class="control-label">Como Secar</label>
            <textarea asp-for="ComoSecar" class="form-control border-1" readonly></textarea>
        </div>
        <div class="form-group mt-3">
            <label class="control-label">Observações</label>
            <textarea asp-for="Observacoes" class="form-control border-1" readonly></textarea>
        </div>

        <hr style="opacity: 0" />
    </div>
</div>