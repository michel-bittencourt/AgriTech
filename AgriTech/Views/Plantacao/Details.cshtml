@model AgriTech.Models.Plantacao

@{
    ViewData["Title"] = "Detalhes";
}

<h1>@ViewData["Title"]</h1>

<div class="d-flex justify-content-between">
    <h4>@Model.NomePlanta</h4>
    <div class="form-group">
        <div class="btn-group">
            <a asp-action="#" class="btn btn-warning rounded">Alterar</a>
            <p style="opacity: 0">---</p>
            <a asp-action="Index" class="btn btn-danger rounded">Voltar</a>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12 mx-auto">
        <div class="form-group d-flex justify-content-between">
            <div class="col-md-3">
                <label class="control-label">Nome</label>
                <input asp-for="NomePlanta" class="form-control border-1" readonly />
            </div>
            <div class="col-md-2">
                <label class="control-label">Lote</label>
                <input asp-for="Lote" class="form-control border-1" readonly />
            </div>
            <div class="col-md-2">
                <label class="control-label">Planta</label>
                <input asp-for="NomePlanta" class="form-control border-1" readonly />
            </div>

            <div class="col-md-2">
                <label class="control-label">Germinou?</label>
                <input asp-for="Germinou" class="form-control border-1" readonly />
            </div>
        </div>

        <div class="form-group d-flex justify-content-between mt-3">
            <div class="col-md-3">
                <label class="control-label">Data que Germinou</label>
                <input asp-for="DataGerminou" class="form-control border-1" readonly />
            </div>
            <div class="col-md-3">
                <label class="control-label">Data de Plantio</label>
                <input asp-for="DataPlantio" class="form-control border-1" readonly />
            </div>
            <div class="col-md-3">
                <label class="control-label">Data aprox. para Colher</label>
                <input asp-for="DataColheita" class="form-control border-1" readonly />
            </div>

            <hr style="opacity: 0" />
        </div>
    </div>
