@model AgriTech.Models.Plantacao

@{
    ViewData["Title"] = "Detalhes";
}

<h1>@ViewData["Title"]</h1>

<div class="d-flex justify-content-between">
    <div>
        <h4>@Model.NomePlanta</h4>
        <h6>@Model.NomeCientifico</h6>
    </div>
    <div class="form-group mt-3">
        <div class="btn-group">
            <a asp-action="#" class="btn btn-warning rounded">Alterar</a>
            <p style="opacity: 0">---</p>
            <a asp-action="Index" class="btn btn-danger rounded">Voltar</a>
        </div>
    </div>
</div>
<hr class="mt-0" />
<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="form-group d-flex justify-content-between">
            <div class="col-md-2">
                <label asp-for="Lote" class="control-label"></label>
                <input asp-for="Lote" class="form-control" readonly />
            </div>
            <div class="col-md-4">
                <label asp-for="NomePlanta" class="control-label">@Html.DisplayNameFor(model => model.Planta.NomePopular)</label>
                <input asp-for="NomePlanta" class="form-control" readonly />
            </div>
            <div class="col-md-4">
                <label asp-for="NomeCientifico" class="control-label">@Html.DisplayNameFor(model => model.Planta.NomeCientifico)</label>
                <input asp-for="NomeCientifico" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group d-flex justify-content-between mt-3">
            <div class="col-md-3">
                <label asp-for="DataPlantio" class="control-label">@Html.DisplayNameFor(model => model.DataPlantio)</label>
                <input asp-for="DataPlantio" class="form-control" readonly />
            </div>
            <div class="col-md-3">
                <label asp-for="DataGerminacao" class="control-label">Data @Html.DisplayNameFor(model => model.DataGerminacao)</label>
                <input asp-for="DataGerminacao" class="form-control" readonly />
            </div>
            <div class="col-md-3">
                <label asp-for="DataColheita" class="control-label">Data @Html.DisplayNameFor(model => model.DataColheita)</label>
                <input asp-for="DataColheita" class="form-control" readonly />
            </div>
        </div>
    </div>
</div>